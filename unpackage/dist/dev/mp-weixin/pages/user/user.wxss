.header {
    width: 100%;
    height: 180rpx;
    background-color: #448ceb;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}
.mine {
    height: 200rpx;
    width: 100%;
    background-color: #8ebbf5;
    color: #fff;
    display: flex;
    justify-content: center;
}
.avatar {
    display: block;
    width: 80px;
    height: 80px;
    border: 1px solid #fff;
    border-radius: 40px;
    overflow: hidden;
    margin: 10px;
}
.text {
    display: flex;
    flex-wrap: wrap;
    height: 90px;
}
.nick {
    font-size: 20px;
    width: 100%;
}
.btn {
    width: 200px;
    background-color: #8ebbf5;
    color: #fff;
    margin: 25px;
}
.operation {
    width: 600rpx;
    margin: 20px auto;
    border-top: none;
}
.card {
    width: 90%;
    margin: 5%;
    border-radius: 10rpx;
    box-shadow: 5px 5px 5px 5px #cdcfcf;
    /* padding: 0 0; */
    padding-bottom: 20px;
}
.card1 {
    width: 90%;
    margin: 5%;
    border-radius: 10rpx;
    box-shadow: 5px 5px 5px 5px #cdcfcf;
}
.title {
    font-size: 16px;
    padding: 20px;
}
.funList {
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.item {
    width: 50px;
    height: 50px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    font-size: 14px;
}
.img {
    width: 25px;
    height: 25px;
}

